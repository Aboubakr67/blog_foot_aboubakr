{% extends 'base.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center mb-4">{{ title }}</h1>

		{% for label, messages in app.flashes %}
			<div class="alert alert-{{ label }}">
				{% for message in messages %}
					<p>{{ message }}</p>
				{% endfor %}
			</div>
		{% endfor %}

		<div class="card">
			<div class="card-body">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

				<div class="form-group">
					{{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.equipeDomicile, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.equipeDomicile, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.equipeExterieur, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.equipeExterieur, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.dateMatch, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.dateMatch, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="form-group">
					{{ form_label(form.score, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.score, {'attr': {'class': 'form-control'}}) }}
				</div>

				<div class="text-center mt-4">
					<button type="submit" class="btn btn-primary">Modifier</button>
				</div>

				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
